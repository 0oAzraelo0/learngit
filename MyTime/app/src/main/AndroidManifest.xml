<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.len.mytime">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyTheme">
        <!--上面一句选择自定义的主题style-->
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--declare新的activity-->
        <activity android:name=".TaskLayout"></activity>
        <activity android:name=".StaticsLayout"></activity>
        <activity android:name=".SettingLayout"></activity>
        <activity android:name=".AboutLayout"></activity>
    </application>

</manifest>